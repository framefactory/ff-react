{
    "compilerOptions": {
        "composite": true,
        "target": "ES2020",
        "module": "CommonJS",
        "experimentalDecorators": true,
        "sourceMap": true,
        "jsx": "react",

        "outDir": "dist/exports",
        "rootDir": "src",

        "baseUrl": ".",
        "paths": {
            "@ff/core/*": [ "../core/src/*" ],
            "@ff/browser/*": [ "../browser/src/*" ],
            "@ff/graph/*": [ "../graph/src/*" ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "references": [
        { "path":  "../core" },
        { "path":  "../browser" },
        { "path":  "../graph" }
    ]
}
